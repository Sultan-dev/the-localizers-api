# Cloud SQL (Private IP) environment template
# Copy this file to .env and replace placeholders before deploying

APP_NAME=LocalizerAPI
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-api-url

LOG_CHANNEL=stack

DB_CONNECTION=mysql
DB_HOST=YOUR_CLOUD_SQL_PRIVATE_IP
DB_PORT=3306
DB_DATABASE=localizer
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Cloud SQL Connection Details
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance-name
CLOUD_SQL_REGION=your-region
CLOUD_SQL_VPC=your-vpc-name

# Cache/session/filesystem
CACHE_DRIVER=file
SESSION_DRIVER=file
FILESYSTEM_DRIVER=local

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=mail.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="Localizer"
